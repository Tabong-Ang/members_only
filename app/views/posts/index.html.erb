<h1 class="text-3xl font-bold mb-6 text-gray-800">All Posts</h1>

<% @posts.each do |post| %>
  <div class="mb-6 p-4 border rounded-lg shadow-sm bg-white">
    <h2 class="text-xl font-semibold text-indigo-700"><%= post.title %></h2>
    <p class="mt-2 text-gray-700"><%= post.content %></p>

    <% if user_signed_in? %>
      <p class="mt-2 text-sm text-gray-500">
        Author: <%= post.user.name if post.user.present? %>
      </p>
    <% else %>
      <p class="mt-2 text-sm text-gray-400 italic">
        Author: Anonymous
      </p>
    <% end %>
  </div>
<% end %>

